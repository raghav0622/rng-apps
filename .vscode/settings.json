{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".next": true,
    "node_modules": true,
    "package-lock.json": true,
    ".prettierrc": true,
    "next-env.d.ts": true,
    ".vscode": true,
    "public": true,
    "eslint.config.mjs": true,
    "next.config.ts": true,
    "tsconfig.json": true
  },
  "hide-files.files": [
    "node_modules",
    "package-lock.json",
    ".prettierrc",
    "next-env.d.ts",
    ".vscode",
    "public",
    "eslint.config.mjs",
    "next.config.ts",
    "tsconfig.json"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
