{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".next": true,
    "node_modules": true,
    "package-lock.json": true,
    ".prettierrc": true,
    "next-env.d.ts": true,
    ".vscode": true,
    "public": true,
    "eslint.config.mjs": true,
    "next.config.ts": true,
    "tsconfig.json": true,
    ".idx": true,
    "app/(auth)": true,
    "app/(layout2)": true,
    "app/favicon.ico": true,
    "app/layout.tsx": true,
    "app/loading.tsx": true,
    "app/page.tsx": true,
    "app/provider.tsx": true,
    "app/api": true,
    "core/abstract-event-bus": true,
    "core/abstract-firestore-repository": true,
    "core/abstract-notification-provider": true,
    "core/abstract-payment-provider": true,
    "core/abstract-search-provider": true,
    "core/abstract-service": true,
    "core/abstract-storage-provider": true,
    "core/safe-action": true,
    "core/utils": true,
    "core/utils/errors.ts": true,
    "core/utils/rate-limit.ts": true,
    "core/utils/tracing.ts": true,
    "lib": true
  },
  "hide-files.files": [
    "node_modules",
    "package-lock.json",
    ".prettierrc",
    "next-env.d.ts",
    ".vscode",
    "public",
    "eslint.config.mjs",
    "next.config.ts",
    "tsconfig.json",
    ".idx",
    "app/(auth)",
    "app/(layout2)",
    "app/favicon.ico",
    "app/layout.tsx",
    "app/loading.tsx",
    "app/page.tsx",
    "app/provider.tsx",
    "app/api",
    "core/abstract-event-bus",
    "core/abstract-firestore-repository",
    "core/abstract-notification-provider",
    "core/abstract-payment-provider",
    "core/abstract-search-provider",
    "core/abstract-service",
    "core/abstract-storage-provider",
    "core/safe-action",
    "core/utils",
    "core/utils/errors.ts",
    "core/utils/rate-limit.ts",
    "core/utils/tracing.ts",
    "lib"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
