rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic rules for your app
    // Note: You should refine these based on your RBAC/Org requirements
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /organizations/{orgId} {
      allow read, write: if request.auth != null; // Refine based on membership
      
      match /members/{memberId} {
        allow read, write: if request.auth != null;
      }
    }

    match /invites/{inviteId} {
      allow read, write: if true; // Temporary for logic testing
    }
    
    match /audit_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Server-only
    }

    match /notifications/{notifId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if false; // Server-only
    }
  }
}
